<h3><a class="btn btn-secondary" href="/employee"><i class="fa fa-plus"></i> Create New</a> Driver Details List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Driver Name</th>
            <th>Vnn</th>
            <th>Office Name</th>
            <th>Licence Plate</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.cname}}</td>
            <td>{{this.fullName}}</td>
            <td>{{this.vnn}}</td>
            <td>{{this.oname}}</td>
            <td>{{this.lp}}</td>
            <td>{{this.latitude}}</td>
            <td>{{this.longitude}}</td>
            <td>
                <a href="/employee/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/employee/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        
        {{/each}}
    </tbody>
 
</table>
